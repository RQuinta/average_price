class Api::ProdutosBaseController < ApplicationController

  respond_to :json

  before_action :set_produto, only: [:update, :destroy]

  def index
    respond_with(ProdutoBase).all
  end

  def create
    @produto_base = ProdutoBase.create produto_params
    render json: @produto_base
  end

  def update
    @produto_base.update_attributes produto_params
    respond_with :api, @produto_base
  end

  def show
    respond_with :api, @produto_base
  end

  def destroy
    @produto.destroy
    respond_with :api, @produto_base
  end

  private

  def produto_params
    params.require(:produto_base).permit([:nome])
  end

  def set_produto
    @produto_base = ProdutoBase.find params[:id]
  end

end
